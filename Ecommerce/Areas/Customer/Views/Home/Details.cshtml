@model Ecommerce.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="Edit " method="post" enctype="multipart/form-data"> 
    <input type="hidden" asp-for="Id" />
          
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control" readonly="readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" readonly="readonly" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="ProductColor">Product Color</label>
            <input asp-for="ProductColor" class="form-control" readonly="readonly" />
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Image">Image</label>
            <img src="/@Model.Image" width="100" style="border-radius:5px;border:1px solid #efefef" />
            @if(Model.isAvailable)
            {
                <img src="/Image/instock.png" width="300" height="200">
            }
            else
            {
               <img src="/Image/istockphoto-1282202681-612x612.jpg" width="300" height="200">
            }
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>   
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="ProductType">Product Type</label>
             <input asp-for="ProductType" class="form-control" readonly="readonly" />
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>   
    </div>
       <div class="form-group row">
        <div class="col-5">
            <label asp-for="SpecialType">Special Tag</label>
                <input asp-for="SpecialType" class="form-control" readonly="readonly" />
            <span asp-validation-for="SpecialType" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <input value="Add to Cart" class="btn btn-info" type="submit" />
        </div>   
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>      
</form>


@section Scripts{ 

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

}



