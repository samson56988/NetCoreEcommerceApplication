@model Ecommerce.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info"> Create Product Type</h2>
<form asp-action="Edit " method="post" enctype="multipart/form-data"> 
    <input type="hidden" asp-for="Id" />
          
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Name">Product Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>   
    </div>

     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="ProductColor">Product Color</label>
            <input asp-for="ProductColor" class="form-control" />
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" class="form-control" type="file" />         
            <img src="/@Model.Image" width="100" style="border-radius:5px;border:1px solid #efefef" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>   
    </div>
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="ProductTypeId">Product Type</label>
             <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control"></select>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>   
    </div>
       <div class="form-group row">
        <div class="col-5">
            <label asp-for="SpecialTypeId">Special Tag</label>
             <select asp-for="SpecialTypeId" asp-items="ViewBag.TagID" class="form-control"></select>
            <span asp-validation-for="SpecialTypeId" class="text-danger"></span>
        </div>   
    </div>
     <div class="form-group row">
        <div class="col-5">
            <input asp-for="isAvailable" class="" type="checkbox" />
        </div>   
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" asp-route="@Model.Id" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>      
</form>


@section Scripts{ 

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

}