
@model Ecommerce.Models.ProductType
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info"> Create Product Type</h2>

<form asp-action="Create" method="post"> 
    
    <div class="form-group row">
        <div class="col-5">
            <label asp-for="Product">Product Name</label>
            <input asp-for="Product" class="form-control" />
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>   
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>


@section Scripts{ 

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

}