
@model Ecommerce.Models.ProductType
@{
    ViewData["Title"] = "Details";
}
<br />
<h2 class="text-info">Product Type Details</h2>

<form asp-action="Details" method="post">

    <div class="form-group row">
        <div class="col-5">
            <label asp-for="Product">Product Name</label>
            <input asp-for="Product" readonly="readonly" class="form-control" />
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-success">Edit</a>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>


@section Scripts{

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

}