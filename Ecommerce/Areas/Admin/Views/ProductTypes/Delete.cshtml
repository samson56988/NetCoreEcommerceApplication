@model Ecommerce.Models.ProductType
@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete" method="post">

    <br />
    <h2 class="text-info"> Delete Product Type</h2>

    <div class="form-group row">
        <input type="hidden" asp-for="ProductId" />
        <div class="col-5">
            <label asp-for="Product">Product Name</label>
            <input asp-for="Product" readonly="readonly" class="form-control" />
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>


@section Scripts{

    @{ await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

}

